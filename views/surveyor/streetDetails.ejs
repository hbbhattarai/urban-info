<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Street Details</title>

  <!-- Raleway Font -->
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Raleway', sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f9f9f9;
    }

    h1 {
      text-align: center;
      font-weight: 600;
    }

    .street-card {
      max-width: 600px;
      margin: 20px auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .photo-preview img {
      width: 100px;
      height: auto;
      margin-right: 10px;
      border-radius: 4px;
    }

    form {
      max-width: 500px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    select,
    textarea {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-family: inherit;
      font-size: 1rem;
    }

    input[type="checkbox"] {
      margin-top: 10px;
    }

    textarea {
      resize: vertical;
      min-height: 80px;
    }

    button {
      margin-top: 20px;
      width: 100%;
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    @media (max-width: 600px) {
      body {
        padding: 10px;
      }

      form {
        padding: 15px;
      }
    }
  </style>
</head>

<body>
  <h1>Street Details for Parcel ID: <%= parcelId %></h1>

  <% if (streets && streets.length > 0) { %>
    <% streets.forEach((street, idx) => { %>
      <div class="street-card">
        <h2>Street <%= idx + 1 %>: <%= street.streetType %></h2>
        <p><strong>Material Used:</strong> <%= street.materialUsed %></p>
        <p><strong>Paved:</strong> <%= street.paved ? 'Yes' : 'No' %></p>
        <% if (street.notes) { %>
          <p><strong>Notes:</strong> <%= street.notes %></p>
        <% } %>

        <% if (street.photos && street.photos.length > 0) { %>
          <div class="photo-preview">
            <% street.photos.forEach(photo => { %>
              <img src="<%= photo %>" alt="Street Photo">
            <% }) %>
          </div>
        <% } %>
      </div>
    <% }); %>
  <% } else { %>
    <p style="text-align:center;">No street data available. Please fill out the form below.</p>

    <form action="/editor/surveys/<%= surveyId %>/survey/parcel/<%= parcelId %>/street" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="parcelId" value="<%= parcelId %>">

      <label for="streetType">Street Type:</label>
      <select id="streetType" name="streetType" required>
        <option value="">Select type</option>
        <option value="footpath">Footpath</option>
        <option value="road">Road</option>
        <option value="parking">Parking</option>
      </select>

      <label for="materialUsed">Material Used:</label>
      <input type="text" id="materialUsed" name="materialUsed" required>

      <label>
        <input type="checkbox" id="paved" name="paved">
        Paved
      </label>

      <label for="notes">Notes:</label>
      <textarea id="notes" name="notes" placeholder="Any additional details..."></textarea>

      <label for="photos">Street Photos:</label>
      <input type="file" id="photos" name="photos" accept="image/*" multiple>

      <label>
        <input type="checkbox" id="status" name="status">
        Is Survey Completed
      </label>

      <button type="submit">Submit</button>
    </form>
  <% } %>
</body>
</html>
