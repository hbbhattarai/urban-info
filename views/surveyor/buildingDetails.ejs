<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Building Details</title>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Raleway', sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f9f9f9;
    }

    h1 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
    }

    .building-list {
      max-width: 800px;
      margin: auto;
      margin-bottom: 40px;
    }

    .building-card {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .photo-preview img {
      height: 100px;
      margin-right: 10px;
      border-radius: 4px;
      border: 1px solid #ddd;
    }

    .actions {
      margin-top: 10px;
    }

    .actions a {
      display: inline-block;
      margin-right: 10px;
      padding: 8px 12px;
      text-decoration: none;
      background-color: #4CAF50;
      color: white;
      border-radius: 4px;
      font-size: 14px;
    }

    form {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    input[type="checkbox"] {
      margin-top: 5px;
      width: 100%;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }

    input[type="checkbox"] {
      width: auto;
      margin-right: 5px;
    }

    button {
      margin-top: 20px;
      width: 100%;
      padding: 12px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
</head>

<body>
  <h1>Buildings on Plot ID: <%= plotId %></h1>

  <div class="building-list">
    <% if (building?.length) { %>
      <% building.forEach((bld, idx) => { %>
        <div class="building-card">
          <h2>Building <%= idx + 1 %>: <%= bld.name %></h2>
          <p><strong>Owner CID:</strong> <%= bld.ownerCid %></p>
          <p><strong>Year Built:</strong> <%= bld.yearBuilt %></p>
          <p><strong>Storeys:</strong> <%= bld.storeys %></p>
          <p><strong>Structure Type:</strong> <%= bld.structureType %></p>
          <p><strong>Retrofit Ready:</strong> <%= bld.retrofitReady ? 'Yes' : 'No' %></p>

          <% if (bld.facadePhotos?.length) { %>
            <div class="photo-preview">
              <% bld.facadePhotos.forEach(photo => { %>
                <img src="<%= photo %>" alt="Facade Photo">
              <% }) %>
            </div>
          <% } %>

          <div class="actions">
            <a href="/editor/surveys/<%= surveyId %>/survey/parcel/<%= parcelId %>/building/<%= bld.plotId %>/edit">Edit</a>
            <a href="/editor/surveys/<%= surveyId %>/survey/parcel/<%= parcelId %>/building/<%= bld.plotId %>/units">View/Add Units</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p style="text-align:center;">No buildings added yet.</p>
    <% } %>
  </div>

  <form action="/editor/surveys/<%= surveyId %>/survey/parcel/<%= parcelId %>/building/<%= plotId %>/add" method="POST" enctype="multipart/form-data">
    <h2 style="text-align:center;">Add New Building</h2>

    <label for="name">Building Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="ownerCid">Owner CID:</label>
    <input type="text" id="ownerCid" name="ownerCid" required>

    <label for="yearBuilt">Year Built:</label>
    <input type="number" id="yearBuilt" name="yearBuilt" required>

    <label for="storeys">Number of Storeys:</label>
    <input type="number" id="storeys" name="storeys" required>

    <label for="structureType">Structure Type:</label>
    <input type="text" id="structureType" name="structureType" required>

    <label>
      <input type="checkbox" id="retrofitReady" name="retrofitReady">
      Retrofit Ready
    </label>

    <label for="facadePhotos">Facade Photos:</label>
    <input type="file" id="facadePhotos" name="facadePhotos" accept="image/*" multiple>

    <button type="submit">Add Building</button>
  </form>
</body>
</html>
