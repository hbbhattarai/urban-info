<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Building Details</title>

  <!-- Raleway Font -->
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Raleway', sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f9f9f9;
    }

    h1 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
    }

    form {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    input[type="checkbox"] {
      margin-top: 5px;
      width: 100%;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }

    input[type="checkbox"] {
      width: auto;
      margin-right: 5px;
    }

    button {
      margin-top: 20px;
      width: 100%;
      padding: 12px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .photo-preview {
      margin-top: 15px;
    }

    .photo-preview img {
      height: 100px;
      margin-right: 10px;
      border-radius: 4px;
      border: 1px solid #ddd;
    }

    @media (max-width: 600px) {
      form {
        padding: 20px;
      }
    }
  </style>
</head>

<body>
  <h1>Building Details for Plot ID: <%= plotId %></h1>

  <% if (building) { %>
  <div style="max-width: 600px; margin: auto; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
    <h2 style="font-weight: 600;">Existing Building</h2>
    <p><strong>Name:</strong> <%= building.name %></p>
    <p><strong>Owner CID:</strong> <%= building.ownerCid %></p>
    <p><strong>Year Built:</strong> <%= building.yearBuilt %></p>
    <p><strong>Storeys:</strong> <%= building.storeys %></p>
    <p><strong>Structure Type:</strong> <%= building.structureType %></p>
    <p><strong>Retrofit Ready:</strong> <%= building.retrofitReady ? 'Yes' : 'No' %></p>

    <% if (building.facadePhotos?.length) { %>
      <div class="photo-preview">
        <% building.facadePhotos.forEach(photo => { %>
          <img src="<%= photo %>" alt="Facade Photo">
        <% }) %>
      </div>
    <% } %>
  </div>
<% } %>


  <form action="/editor/surveys/<%= surveyId %>/survey/parcel/<%= parcelId %>/building/<%= plotId %>" method="POST" enctype="multipart/form-data">
    <label for="name">Building Name:</label>
    <input type="text" id="name" name="name" value="<%= building?.name || '' %>" required>

    <label for="ownerCid">Owner CID:</label>
    <input type="text" id="ownerCid" name="ownerCid" value="<%= building?.ownerCid || '' %>" required>

    <label for="yearBuilt">Year Built:</label>
    <input type="number" id="yearBuilt" name="yearBuilt" value="<%= building?.yearBuilt || '' %>" required>

    <label for="storeys">Number of Storeys:</label>
    <input type="number" id="storeys" name="storeys" value="<%= building?.storeys || '' %>" required>

    <label for="structureType">Structure Type:</label>
    <input type="text" id="structureType" name="structureType" value="<%= building?.structureType || '' %>" required>

    <label>
      <input type="checkbox" id="retrofitReady" name="retrofitReady" <%= building?.retrofitReady ? 'checked' : '' %>>
      Retrofit Ready
    </label>

    <label for="facadePhotos">Facade Photos:</label>
    <input type="file" id="facadePhotos" name="facadePhotos" accept="image/*" multiple>

    <% if (building?.facadePhotos?.length) { %>
      <div class="photo-preview">
        <% building.facadePhotos.forEach(photo => { %>
          <img src="<%= photo %>" alt="Facade Photo">
        <% }) %>
      </div>
    <% } %>

    <button type="submit">Submit</button>
  </form>
</body>

</html>
